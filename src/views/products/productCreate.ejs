<form action="/products/create" method="POST" enctype="multipart/form-data">
    <div class="input-form">
        <label for="name">Nombre del producto</label>
        <input type="text" name="name" id="name" placeholder="Nombre del producto">
    </div>
    <div class="input-form">
        <label for="price">Precio</label>
        <input type="text" name="price" id="price" placeholder="$1000">
    </div>
    <div class="input-form">
        <label for="discount">Descuento</label>
        <input type="text" name="discount" id="discount" placeholder="10">
    </div>
    <div class="input-form">
        <label for="description">Descripcion</label>
        <input type="text" name="description" id="description" placeholder="Descripcion del producto">
    </div>
    <div class="input-form">
        <label for="brand">Marca</label>
        <select name="brand" id="brand" required>
            <option value=""disabled selected>Marca</option>
            <% for(const marcas of brand) { %> 
                <option value="<%= marcas.id %> "><%= marcas.name %> </option> <% } %> 
        </select>
    </div>
    <div class="input-form">
        <label for="type">Categoria</label>
        <select name="type" id="type" required>
            <option value=""disabled selected>categoria</option>
            <% for(const tipo of type) { %> 
                <option value="<%= tipo.id %> "><%= tipo.name %> </option> <% } %> 
        </select>
    </div>

    <div class="input-form">
        <label for="detail">Detalle</label>
        <input type="text" name="detail" id="detail[]" />
    </div>
    <div class="input-form">
        <label for="detail">Detalle</label>
        <input type="text" name="detail" id="detail[]"/>
    </div>
    <div class="input-form">
        <label for="detail">Detalle</label>
        <input type="text" name="detail" id="detail[]" />
    </div>

