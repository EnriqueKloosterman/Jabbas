<%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')  %> 
    <main>
        <article>
            <div class="title-name">
                <h2>DESTACADOS</h2>
            </div>
            <section class="container">
                <div class="product-wraper">
                    <% for( let i = 0; i < featuredProducts.length; i++ ) { %>
                    <article class="product-container">
                        <section class="img-container">
                            <img src="/images/products/<%= featuredProducts[i].image[0].name %>" alt="foto de <%= featuredProducts[i].name %>">
                        </section>
                        <section class="description-container">
                            <h2 id="name"><%= featuredProducts[i].name %></h2>
                            <p><%= featuredProducts[i].description %></p>
                            <p><%= featuredProducts[i].brand.name %> </p>
                            
                        </section>
                    </article> 
                    <% } %>
                </div>
            </section>    
        </article>
        
        <article>
            <div class="title-name">
                <h2>OFERTAS</h2>
            </div>
            <section class="container">
                <div class="product-wraper">
                    <% for( let i = 0; i < onSale.length; i++ ) { %>
                    <article class="product-container">
                        <section class="img-container">
                            <img src="/images/products/<%= onSale[i].image[0].name %>" alt="foto de <%= onSale[i].name %>">
                        </section>
                        <section class="description-container">
                            <h2 id="name"><%= onSale[i].name %></h2>
                            <p><%= onSale[i].description %></p>
                            <p><%= onSale[i].brand.name %> </p>
                            
                        </section>
                    </article> 
                    <% } %>
                </div>
            </section> 
        </article>
    
    
    
    </main>
    
</body>